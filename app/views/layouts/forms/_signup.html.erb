<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <div class='form-group form-group-material-indigo'>
      <%= f.label :type, 'Account Type', class: 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <div class='radio radio-material-indigo'>
          <label>
            <%= f.radio_button :type, 'Buyer' %>Buying Space
          </label>
        </div>
        <div class='radio radio-material-indigo'>
          <label>
            <%= f.radio_button :type, 'Seller' %>Selling Space
          </label>
        </div>
      </div>
    </div>
    <div class='form-group form-group-material-indigo'>
      <%= f.label :first_name, 'Your Name', class: 'col-lg-2 control-label' %>
      <div class='col-lg-5'>
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
      </div>
      <div class='col-lg-5'>
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
      </div>
    </div>
    <div class='form-group form-group-material-indigo'>
      <%= f.label :email, class: 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <%= f.email_field :email, class: 'form-control', placeholder: 'your@email.com' %>
      </div>
    </div>
    <div class='form-group form-group-material-indigo'>
      <%= f.label :password, class: 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <%= f.password_field :password, class: 'form-control', placeholder: '********', autocomplete: 'off' %>
      </div>
    </div>
    <div class='form-group form-group-material-indigo'>
      <%= f.label :password_confirmation, class: 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '********', autocomplete: 'off' %>
      </div>
    </div>
    <div class='form-group' style='margin: 25px -15px -15px -15px;'>
      <div class='col-lg-10 col-lg-offset-2'>
        <%= f.submit 'Sign Up', class: 'btn btn-material-indigo', id: 'btn-signup' %>
        <a href='#' class='btn btn-default' data-dismiss='modal' aria-hidden='true'>Cancel</a>
      </div>
    </div>
  </fieldset>
<% end %>
